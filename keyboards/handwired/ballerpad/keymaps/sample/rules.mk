USER_NAME := xtonhasvim

TRACKBALL_ENABLED = yes 

# don't use interrupts
# TB_INTERRUPT_ENABLED = no

# the sensors are wired to matrix columns; use this pin for row.
TB_USE_MATRIX_ROW = yes
TB_MATRIX_ROW = B0

# the line for each direction (numeric part of pin)
TB_LINE_UP = 4
TB_LINE_DN = 5
TB_LINE_LT = 6
TB_LINE_RT = 7

# the pad for each direction (a letter)
TB_PAD_UP = F
TB_PAD_DN = F
TB_PAD_LT = F
TB_PAD_RT = F
